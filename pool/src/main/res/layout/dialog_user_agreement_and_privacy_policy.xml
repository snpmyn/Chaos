<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_solid_r10"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_16"
        android:text="@string/userAgreementAndPrivacyPolicy"
        android:textColor="@color/fontInput"
        android:textSize="@dimen/sp_16" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialogUserAgreementAndPrivacyPolicyTvUserAgreementAndPrivacyPolicyContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_26"
                android:paddingRight="@dimen/dp_26"
                android:text="@string/userAgreementAndPrivacyPolicyContent"
                android:textColor="@color/fontInput"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <TextView
            android:id="@+id/dialogUserAgreementAndPrivacyPolicyTvNotAgreeAngLoginOut"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/notAgreeAngLoginOut"
            android:textColor="@color/fontInput"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/px1"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/dialogUserAgreementAndPrivacyPolicyTvAgree"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/agree"
            android:textColor="@color/pool_user_agreement_and_privacy_policy_agree_button_text"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>