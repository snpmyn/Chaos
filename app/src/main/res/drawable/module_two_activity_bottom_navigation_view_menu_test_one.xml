<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NewApi">
    <item
        android:id="@+id/stateOn"
        android:drawable="@drawable/ic_clock_alarm_white_24dp"
        android:state_checked="true" />
    <item
        android:id="@+id/stateOff"
        android:drawable="@drawable/ic_clock_alarm_white_24dp" />
    <transition
        android:drawable="@drawable/animated_clock_alarm"
        android:fromId="@id/stateOff"
        android:toId="@id/stateOn" />
</animated-selector>
