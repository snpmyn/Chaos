<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    android:orientation="vertical"
    android:padding="@dimen/dp_12"
    tools:context="widget.banner.BannerTwoActivity">

    <com.chaos.kotlin.widget.banner.view.BannerView
        android:id="@+id/bannerTwoActivityBvInterval"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        app:BannerViewCornerRadius="@dimen/dp_8"
        app:BannerViewIntervalInMillis="4000"
        app:BannerViewMargin="@dimen/dp_4"
        app:BannerViewWidthRatio="0.85">

        <com.chaos.kotlin.widget.banner.indicator.CrossBarIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:CrossBarIndicatorBackgroundColor="@color/purple_200"
            app:CrossBarIndicatorForegroundColor="@color/purple_500"
            app:CrossBarIndicatorHeight="@dimen/dp_2"
            app:CrossBarIndicatorSpace="@dimen/dp_4"
            app:CrossBarIndicatorWidth="@dimen/dp_24" />
    </com.chaos.kotlin.widget.banner.view.BannerView>

    <com.chaos.kotlin.widget.banner.view.BannerView
        android:id="@+id/bannerTwoActivityBvSmooth"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_20"
        app:BannerViewHoldInMillis="1000"
        app:BannerViewIntervalInMillis="6000"
        app:BannerViewMargin="@dimen/dp_4"
        app:BannerViewScrollMode="SMOOTH"
        app:BannerViewWidthRatio="0.85">

        <com.chaos.kotlin.widget.banner.indicator.CrossBarIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            app:CrossBarIndicatorBackgroundColor="@color/purple_200"
            app:CrossBarIndicatorForegroundColor="@color/purple_500"
            app:CrossBarIndicatorHeight="@dimen/dp_2"
            app:CrossBarIndicatorSpace="@dimen/dp_4"
            app:CrossBarIndicatorWidth="@dimen/dp_24" />
    </com.chaos.kotlin.widget.banner.view.BannerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize"
        android:clipToPadding="false"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bannerTwoActivityMbClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="?actionBarSize"
            android:text="@string/clear" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bannerTwoActivityMbAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add" />
    </LinearLayout>
</LinearLayout>